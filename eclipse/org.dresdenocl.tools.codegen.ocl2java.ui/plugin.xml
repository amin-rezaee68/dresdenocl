<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Codegen Action Set"
            visible="true"
            id="org.dresdenocl.tools.codegen.ocl2java.ui.actionSet">
         <menu
               label="Dresden OCL"
               id="org.dresdenocl.modelbus.ui.menu">
            <separator
                  name="org.dresdenocl.modelbus.ui.menu.import">
            </separator>
            <separator
                  name="org.dresdenocl.modelbus.ui.menu.tools">
            </separator>
            <groupMarker
            	name="org.dresdenocl.modelbus.ui.menu.codegen">
            </groupMarker>
         </menu>
         <action
               label="Generate AspectJ Constraint Code"
               icon="icons/codegen.gif"
               class="org.dresdenocl.tools.codegen.ocl2java.ui.actions.JavaCodeGenAction"
               tooltip="Creates AspectJ code to instrument constraints for a given model and given OCL constraints."
               menubarPath="org.dresdenocl.modelbus.ui.menu/org.dresdenocl.modelbus.ui.menu.codegen"
               id="org.dresdenocl.tools.codegen.ocl2java.ui.actions.JavaCodeGenAction">
         </action>
      </actionSet>
   </extension>

   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.dresdenocl.modelbus.ui.newWizards.category"
            class="org.dresdenocl.tools.codegen.ocl2java.ui.internal.wizards.JavaCodeWizard"
            hasPages="true"
            icon="icons/codegen.gif"
            id="org.dresdenocl.tools.codegen.ocl2java.ui.importWizards.loadModelWizard"
            name="Generate AspectJ Constraint Code">
         <description>
            Creates AspectJ code to instrument constraints for a given model and given OCL constraints.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.dresdenocl.ui.perspective">
         <newWizardShortcut
               id="org.dresdenocl.tools.codegen.ocl2java.ui.importWizards.loadModelWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
